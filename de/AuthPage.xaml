<Page x:Class="de.AuthPage"
      FontSize="24"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:de"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="500"
      Title="AuthPage">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="350">
            <TextBlock FontWeight="Bold" FontSize="30" HorizontalAlignment="Center" Text="Вход"/>
            <TextBlock Text="Имя пользователя"/>
            <TextBox x:Name="tbLogin" Background="Transparent" BorderThickness="0 0 0 2"/>
            <TextBlock Text="Пароль"/>
            <TextBox x:Name="tbPass" Background="Transparent" BorderThickness="0 0 0 2"/>
            <Button x:Name="btnLog" Content="Войти" Margin="5" Click="btnLog_Click"/>
            <Button x:Name="btnReg" Content="Зарегистрироваться" Margin="5" Click="btnReg_Click"/>
            <TextBlock x:Name="statusBlock" TextWrapping="Wrap" TextAlignment="Center" Foreground="Red"></TextBlock>
        </StackPanel>
    </Grid>
</Page>
